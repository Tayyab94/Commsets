@using finalProject.Models;
@model IEnumerable<BusinessLibrary.UserManagement.User>
@{
    ViewBag.Title = "ShowRegisterUsers";
    //Layout = "~/Views/Shared/_ClientView.cshtml";
    Layout = "~/Areas/AdminSide/Views/Shared/_AdminLayOut.cshtml";
    AlertModel alert = (AlertModel)TempData["userUpdateAlert"];

}
@if (ViewData["UpdateMessageAlert"] != null)
{
    <script lang="javascript">
        alert('ViewData["UpdateMessageAlert"]');
    </script>
}

@*@if(Convert.ToBoolean(WebUtil.ADMIN_ROLE))
{

}*@
    <div class="row">
        <div class="col-lg-6">
            @if (alert != null)
        {
            @Html.Partial("/Views/Shared/_AlertViewMoodel.cshtml", alert);
    }
        </div>
    </div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h2>ShowRegisterUsers</h2>
        @using (Html.BeginForm())
        {
            <table class="table table-responsive table-hover">
                <thead classs="bg-primary">
                    <tr>
                        <th class="text-center">@Html.DisplayNameFor(m => m.FullName)</th>
                        <th class="text-center">@Html.DisplayNameFor(m => m.LoginId)</th>
                        <th class="text-center">@Html.DisplayNameFor(m => m.Password)</th>
                        <th class="text-center">@Html.DisplayNameFor(m => m.ContactNo)</th>
                        <th class="text-center">@Html.DisplayNameFor(m => m.IsActive)</th>
                        <th class="text-center">Profile Image</th>
                        <th class="text-center">Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(m => item.FullName)</td>
                            <td class="text-center">@Html.DisplayFor(m => item.LoginId)</td>
                            <td class="text-center">@Html.DisplayFor(m => item.Password)</td>
                            <td class="text-center">@Html.DisplayFor(m => item.ContactNo)</td>
                            <td class="text-center">@Html.DisplayFor(m => item.IsActive)</td>
                            <td class="text-center"><img src="@Url.Content(item.ImgURL)" class="img-responsive img-thumbnail" width="100" height="100" /></td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "EditUser", "User", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit" }) |
                                @Html.ActionLink("Delete", "DeleteUser", "User", new { id = item.ID }, new { @class = "glyphicon glyphicon-remove" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
    </div>  @*//close the col div*@
</div>  @*//close the show table data row*@


