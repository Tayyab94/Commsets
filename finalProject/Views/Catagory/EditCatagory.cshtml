@model BusinessLibrary.Classified.Catagory
@{
    ViewBag.Title = "EditCatagory";
    Layout = "~/Areas/AdminSide/Views/Shared/_AdminLayOut.cshtml";
}

<h2>EditCatagory</h2>
<div class="row">

            <div class="panel">
                @using (Html.BeginForm("EditCatagory", "Catagory", FormMethod.Post))
                {@Html.AntiForgeryToken()
                    <div class="panel-heading bg-primary">
                        <h3 class="panel-title">
                            Edit Catagory
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name,"Catagory Name", new { @class = " control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" }})
                                    @*@Html.EditorFor(m=>m.Name,new { @class="form-control"})*@
                                </div>
                            </div>
                            <div class="form-group">
                      
                                <div class="col-md-9 col-md-offset-3">
                                   <input type="submit" name="Update" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
    </div>
