
@{
    ViewBag.Title = "AddCounty";
    Layout = "~/Areas/AdminSide/Views/Shared/_AdminLayOut.cshtml";
}


<div class="row">
    <div class="col-md-12">
       
            <h2 class="text-center text-info">Add County</h2>

            @using (Html.BeginForm("AddCounty", "Country", FormMethod.Post))
            {
                <div class="form-horizontal">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="control-label col-lg-2 sr-only">Country Code</label>
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-globe"></span></span>

                                @Html.TextBox("cCode", null, new { @class = "form-control", placeholder = "Enter Coountry Code", required = "required" })
                                @Html.ValidationMessage("cCode", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 sr-only">Country Name</label>
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                @Html.TextBox("cName", null, new { @class = "form-control", placeholder = "Enter Coountry Name", required = "required" })
                                @Html.ValidationMessage("cName", new { @class = "text-danger" })
                            </div>
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input class="btn btn-primary" type="submit" value="Save" />
                            <a href="/Country/ShowCountry" class="btn btn-primary">Show Country</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
@section mySecript{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(function () {
          
            $(".form-control:required").blur(function () {

                if ($(this).val() == 0) {
                   
                    $(this).parent().addClass("has-error");
                    $(this).parent().removeClass("has-success");
                } else {
                    $(this).parent().addClass("has-success");
                    $(this).parent().removeClass("has-error");
                }
            });

        });
    </script>
}
