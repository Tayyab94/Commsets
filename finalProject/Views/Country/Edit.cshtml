@model BusinessLibrary.Country
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminSide/Views/Shared/_AdminLayOut.cshtml";
}

<div class="row">
 
        @using (Html.BeginForm("Edit", "Country", FormMethod.Post))
        {
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title text-center text-justify">Edit Country</h4>
                </div>
                <div class="panel-body">
                  
                        @Html.HiddenFor(m => m.ID) 
                        <div class="form-group">
                            @Html.LabelFor(m => m.Code, "Country Code")
                            @Html.EditorFor(m => m.Code, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, "Country Name")
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                   
                </div>
                <div class="panel-footer">
                    <input class="btn btn-primary" type="submit" value="Edit" />
                </div>
            </div>
        }
  
</div>
