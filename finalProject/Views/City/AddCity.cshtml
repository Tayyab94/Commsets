@model BusinessLibrary.City
@{
    ViewBag.Title = "AddCity";
    Layout = "~/Areas/AdminSide/Views/Shared/_AdminLayOut.cshtml";
}

<h2 class="text-center text-justify text-info">AddCity</h2>
<div class="row">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-denger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "City Name", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBox("cityName", null, new { @class = "form-control", placeholder = "Enter City Name" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-denger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Province, "Province", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownList("ProvinceID", (IEnumerable<SelectListItem>)ViewBag.provincesList, "- Select Province -", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit"  class="btn btn-primary glyphicon glyphicon-save" value="Save" />
                    </div>
                </div>
            </div>
        }
    </div>

