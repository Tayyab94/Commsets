@*@model IEnumerable<BusinessLibrary.City>*@

@using BusinessLibrary;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<City>


@{
    ViewBag.Title = "ShowCities";
    Layout = "~/Areas/AdminSide/Views/Shared/_AdminLayOut.cshtml";
}

<h2>ShowCities</h2>
<div class="row">
   
        @Html.ActionLink("Add new","AddCity","City",new { @class="btn btn-default"})
        <table class="table table-responsive table-hover">
            <thead class="bg-primary">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Province</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m=>item.ID)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Province.Name)</td>
                      <td>@Html.ActionLink("Edit", "EditCity","City", new { id = item.ID },new { @class = "glyphicon glyphicon-edit" }) |
                   
                        @Html.ActionLink("Delete", "DeleteCity",new { id = item.ID}, new { @class = "glyphicon glyphicon-trash"})</td>
                    </tr>
                }
            </tbody>
        </table>
        <div></div>
        Page @(Model.PageCount < Model.PageNumber ? 0: Model.PageNumber)/@Model.PageCount
        <div>
            @Html.PagedListPager(Model, page => Url.Action("ShowCities", new { page = page }))
        </div>
    </div>

