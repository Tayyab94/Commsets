@model BusinessLibrary.Classified.SubCatagory
@{
    ViewBag.Title = "EditSubCatagories";
    Layout = "~/Areas/AdminSide/Views/Shared/_AdminLayOut.cshtml";
}
<div class="row">

    <div class="panel">
        <div class="panel-heading" style="background-color:#aea04e">
            <h3 class="text-center panel-title">Edit SubCatagory</h3>
        </div>

        @using (Html.BeginForm("EditSubCatagories", "SubCatagory", FormMethod.Post))
        {
            <div class="panel-body">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.ID)
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-3">SubCatagory Name</label>
                        <div class="col-lg-9">
                            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Catagory</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(x => x.Catagory.ID, (SelectList)ViewBag.CatagoryList, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <input type="submit" class="btn btn-success btn-block" value="Edit Subcatagory" />
            </div>
        }

    </div>
</div>

